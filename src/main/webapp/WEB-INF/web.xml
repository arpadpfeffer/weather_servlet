<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <jsp-config>
  	<scripting-invalid>true</scripting-invalid>
  </jsp-config>
  
  <servlet>
  	<servlet-name>Weather Servlet</servlet-name>
  	<servlet-class>com.epam.weather.WeatherServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Weather JSP</servlet-name>
  	<jsp-file>/weather.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Weather Servlet</servlet-name>
  	<url-pattern>/weather</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Weather JSP</servlet-name>
  	<url-pattern>/weather.jsp</url-pattern>
  </servlet-mapping>
  
</web-app>
